<% action = (cat.persisted? ? cat_url(cat) : cats_url) %>
<% method = (cat.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <input
    type="text"
    name="cat[name]"
    id="cat_name"
    value="<%= cat.name %>"
    placeholder="Name">

  </br>

  <input
    type="date"
    name="cat[birth_date]"
    id="cat_birth_date"
    value="<%= cat.birth_date %>"
    placeholder="Birthday">

  </br>

  <select name="cat[color]" id="cat_color">
    <option selected disabled>Choose a Color</option>
    <% Cat::COLORS.each do |color| %>
      <option
        <%= cat.color == color ? "selected" : "" %>
        value="<%= color %>">
        <%= color.upcase %>
      </option>
    <% end %>
  </select>
  <br>

  <input
    type="radio"
    name="cat[sex]"
    value="M"
    id="cat_sex_male"
    <%= cat.sex == "M" ? "checked" : "" %>>
  <label for="cat_sex_male">Male</label>
  <input
    type="radio"
    name="cat[sex]"
    value="F"
    id="cat_sex_female"
    <%= cat.sex == "F" ? "checked" : "" %>>
  <label for="cat_sex_female">Female</label>
  <br>
  <textarea name="cat[description]" placeholder="Description"><%= cat.description %></textarea>

  </br>

  <% submit_text = (cat.persisted? ? 'Edit' : 'Create') + ' cat' %>
  <input type="submit" value="<%= submit_text %>">
</form>
